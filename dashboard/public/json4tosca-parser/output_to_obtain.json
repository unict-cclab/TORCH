[
    {
        "name": "mysql_deployment_unit",
        "type": "du",
        "requirements": {
            "create": [],
            "configure":[],
            "start":[]
        },
        "properties": {},
        "containers": [
            {
                "name": "mysql_container",
                "category" : "db",
                "image": "mysql:5.7",
                "volumes": [
                    {
                        "name": "mysql_volume",
                        "category": "block_store",
                        "properties": {
                            "size": "10 GB",
                            "location": "/var/lib/mysql"
                        }
                    }
                ],
                "configuration_script" : "no.configuration.script", 
                "ext_requirements": {},
                "properties": {
                    "port": 3306,
                    "mysql_root_password": "root"
                }
            }
        ]
    },
    {
        "name": "wordpress_deployment_unit",
        "type": "du",
        "requirements": {
            "create": ["mysql_deployment_unit.configure"],
            "configure":[],
            "start":[]
        },
        "properties": {},
        "containers": [
            {
                "name": "wordpress_container",
                "category" : "wa",
                "image": "wordpress",
                "volumes": [
                    {
                        "name": "wordpress_volume",
                        "category": "block_store",
                        "properties": {
                            "size": "2 GB",
                            "location": "/var/www/html"
                        }
                    }
                ],
                "configuration_script" : "no.configuration.script", 
                "ext_requirements": {
                    "wordpress_db_host": "mysql_container"
                },
                "properties": {
                    "port": 80,
                    "wordpress_db_password": "root"
                }
            }
        ]
    }
]
